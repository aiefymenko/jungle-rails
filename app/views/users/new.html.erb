<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>

  <div class="row">
  <div class="col-sm-6 col-sm-offset-1">

  <div class="form-group">
  First Name: <%= f.text_field :first_name, class: 'form-control', placeholder: "Enter your first name" %>
  </div>
  <div class="form-group">
  Last Name: <%= f.text_field :last_name, class: 'form-control', placeholder: "Enter your last name" %>
  </div>
  <div class="form-group">
  Email: <%= f.email_field :email, class: 'form-control', placeholder: "Enter your e-mail address" %>
  </div>
  <div class="form-group">
  Password: <%= f.password_field :password, class: 'form-control', placeholder: "Enter your password"%>
  </div>
  <div class="form-group">
  Password Confirmation: <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Confirm the password" %>
  </div>
  <%= f.submit "Submit", class: 'btn btn-primary' %>

  <% end %>
  </div>
  </div>

