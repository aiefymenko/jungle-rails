<h1>Login</h1>

<%= form_tag '/login' do %>

  <div class="row">
  <div class="col-sm-6 col-sm-offset-1">

  <div class="form-group">
  Email: <%= email_field_tag :email, nil, class: 'form-control', placeholder: "Enter your e-mail" %>
  </div>
  <div class="form-group">
  Password: <%= password_field_tag :password, nil, class: 'form-control', placeholder: "Enter your password" %>
  </div>
  <%= submit_tag "Submit", class: 'btn btn-primary' %>

<% end %>
</div>
</div>